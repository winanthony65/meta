{
  "name": "My Codespace",
  "version": "1.0.0",

  "image": "debian:12",

  "preinstall": [
    {
      "script": [
        "wget -O- https://apt.releases.ubuntu.com/debian/buster-backports/install-guide/install.gpg | gpg --dearmor > /etc/apt/trusted.gpg.d/debian-backports.gpg",
        "echo 'deb https://apt.releases.ubuntu.com/debian buster-backports main' >> /etc/apt/sources.list",
        "apt update",
        "apt install -y git docker curl bash zsh tmux"
      ]
    }
  ],

  "postinstall": [
    {
      "script": [
        "groupadd -r docker",
        "usermod -aG docker ${USER}",
        "newgrp docker",
        "curl -fsSL https://raw.githubusercontent.com/oh-my-zsh/oh-my-zsh/master/tools/install.sh | bash",
        "chsh -s $(which zsh) ${USER}",
        "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
        "pip install pre-commit",
        "pre-commit install",
        "pre-commit autoupdate"
      ]
    }
  ],

  "forwardPorts": [
    {
      "port": 8080,
      "hostPort": 8080
    }
  ],

  "settings": {
    "docker": true,
    "terminal": {
      "theme": "Monokai",
      "fontFamily": "Fira Code"
    }
  },

  "extensions": [
    "ms-vscode.csharp",
    "ms-vscode.cpptools",
    "rust-lang.rust-vscode",
    "david-herman.python",
    "redhat.vscode-julia",
    "redhat.vscode-go"
  ]
}
